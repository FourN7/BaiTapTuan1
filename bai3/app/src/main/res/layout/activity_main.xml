<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Giải Phương Trình Bậc Nhất (ax+b=0)" />

    <TextView
        android:id="@+id/textView_nhapA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập a (a#0):" />

    <EditText
        android:id="@+id/editText_nhapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView_nhapA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập b:" />

    <EditText
        android:id="@+id/editText_nhapb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_kq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kết quả" />
    <TextView
        android:id="@+id/textView_kq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết quả" />


</LinearLayout>